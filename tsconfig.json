{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2017",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "strictBindCallApply": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "scripthost",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "*.config.js",
    "**/*.js",
  ]
}
